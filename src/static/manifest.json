{
  "manifest_version": 3,
  "name": "DomHacks",
  "version": "1.0",
  "description": "Add Deck Tracking Utility to Dominion",
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png",
    "256": "icon-256.png"
  },
  "action": {
    "default_title": "Dominion Utility",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "js": [
        "contentScript.js"
      ],
      "matches": [
        "*://*.dominion.games/*"
      ]
    }
  ],
  "permissions": [
    "tabs",
    "bookmarks",
    "unlimitedStorage",
    "storage"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "/images/*"
      ],
      "matches": [
        "*://*.dominion.games/*"
      ]
    }
  ]
}