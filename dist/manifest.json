{
  "manifest_version": 3,
  "name": "DomHacks",
  "version": "1.0",
  "description": "Add Deck Tracking Utility to Dominion",
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png",
    "256": "icon-256.png"
  },
  "action": {
    "default_title": "Dominion Utility",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "chrome_url_overrides": {
    "newtab": "newTab.html"
  },
  "content_scripts": [
    {
      "js": [
        "content.js",
        "jquery-3.6.3.min.js"
      ],
      "matches": [
        "*://*.dominion.games/*",
        "https://*.google.com/*"
      ]
    }
  ],
  "permissions": [
    "tabs",
    "bookmarks",
    "unlimitedStorage",
    "storage"
  ]
}